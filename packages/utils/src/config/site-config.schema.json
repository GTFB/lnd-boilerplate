{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lnd-boilerplate.dev/schemas/site-config.json",
  "title": "Site Configuration",
  "description": "Unified configuration file for the entire project",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "site": {
      "type": "object",
      "description": "Site metadata and basic information",
      "properties": {
        "name": {
          "type": "string",
          "description": "Full site name"
        },
        "shortName": {
          "type": "string",
          "description": "Short site name for display"
        },
        "description": {
          "type": "string",
          "description": "Site description"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+",
          "description": "Site version in semver format"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Primary site URL"
        },
        "author": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "url": { "type": "string", "format": "uri" }
          },
          "required": ["name", "email", "url"]
        },
        "language": {
          "type": "string",
          "pattern": "^[a-z]{2}$",
          "description": "Primary language code (ISO 639-1)"
        },
        "locale": {
          "type": "string",
          "pattern": "^[a-z]{2}-[A-Z]{2}$",
          "description": "Locale code (ISO 639-1 + ISO 3166-1)"
        },
        "timezone": {
          "type": "string",
          "description": "Default timezone"
        }
      },
      "required": ["name", "shortName", "description", "version", "url", "author", "language", "locale", "timezone"]
    },
    "seo": {
      "type": "object",
      "description": "SEO configuration",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "keywords": {
          "type": "array",
          "items": { "type": "string" }
        },
        "ogImage": { "type": "string" },
        "twitterCard": {
          "type": "string",
          "enum": ["summary", "summary_large_image", "app", "player"]
        },
        "twitterHandle": { "type": "string" },
        "robots": {
          "type": "object",
          "properties": {
            "index": { "type": "boolean" },
            "follow": { "type": "boolean" },
            "googleBot": {
              "type": "object",
              "properties": {
                "index": { "type": "boolean" },
                "follow": { "type": "boolean" },
                "maxVideoPreview": { "type": "number" },
                "maxImagePreview": {
                  "type": "string",
                  "enum": ["none", "standard", "large"]
                },
                "maxSnippet": { "type": "number" }
              }
            }
          }
        }
      },
      "required": ["title", "description", "keywords", "ogImage", "twitterCard", "twitterHandle", "robots"]
    },
    "manifest": {
      "type": "object",
      "description": "Web App Manifest configuration",
      "properties": {
        "name": { "type": "string" },
        "shortName": { "type": "string" },
        "description": { "type": "string" },
        "startUrl": { "type": "string" },
        "display": {
          "type": "string",
          "enum": ["fullscreen", "standalone", "minimal-ui", "browser"]
        },
        "backgroundColor": { "type": "string" },
        "themeColor": { "type": "string" },
        "orientation": {
          "type": "string",
          "enum": ["any", "natural", "landscape", "landscape-primary", "landscape-secondary", "portrait", "portrait-primary", "portrait-secondary"]
        },
        "scope": { "type": "string" },
        "lang": { "type": "string" },
        "categories": {
          "type": "array",
          "items": { "type": "string" }
        },
        "icons": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "src": { "type": "string" },
              "sizes": { "type": "string" },
              "type": { "type": "string" },
              "purpose": {
                "type": "string",
                "enum": ["any", "maskable", "monochrome"]
              }
            },
            "required": ["src", "sizes", "type"]
          }
        },
        "screenshots": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "src": { "type": "string" },
              "sizes": { "type": "string" },
              "type": { "type": "string" },
              "formFactor": {
                "type": "string",
                "enum": ["wide", "narrow"]
              },
              "label": { "type": "string" }
            },
            "required": ["src", "sizes", "type", "formFactor", "label"]
          }
        },
        "shortcuts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "shortName": { "type": "string" },
              "description": { "type": "string" },
              "url": { "type": "string" },
              "icons": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "src": { "type": "string" },
                    "sizes": { "type": "string" }
                  },
                  "required": ["src", "sizes"]
                }
              }
            },
            "required": ["name", "shortName", "description", "url"]
          }
        }
      },
      "required": ["name", "shortName", "description", "startUrl", "display", "backgroundColor", "themeColor", "orientation", "scope", "lang", "categories", "icons"]
    },
    "build": {
      "type": "object",
      "description": "Build configuration",
      "properties": {
        "framework": {
          "type": "string",
          "enum": ["nextjs", "vite", "webpack", "rollup"]
        },
        "outputDirectory": { "type": "string" },
        "installCommand": { "type": "string" },
        "buildCommand": { "type": "string" },
        "devCommand": { "type": "string" },
        "nodeVersion": { "type": "string" },
        "pageExtensions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "webpack": {
          "type": "object",
          "properties": {
            "mdx": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "jsxImportSource": { "type": "string" }
              }
            }
          }
        }
      },
      "required": ["framework", "outputDirectory", "installCommand", "buildCommand", "devCommand", "nodeVersion", "pageExtensions", "webpack"]
    },
    "deployment": {
      "type": "object",
      "description": "Deployment configuration",
      "properties": {
        "vercel": {
          "type": "object",
          "properties": {
            "framework": { "type": "string" },
            "functions": {
              "type": "object",
              "patternProperties": {
                ".*": {
                  "type": "object",
                  "properties": {
                    "runtime": { "type": "string" }
                  }
                }
              }
            },
            "rewrites": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "source": { "type": "string" },
                  "destination": { "type": "string" }
                },
                "required": ["source", "destination"]
              }
            },
            "headers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "source": { "type": "string" },
                  "headers": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "key": { "type": "string" },
                        "value": { "type": "string" }
                      },
                      "required": ["key", "value"]
                    }
                  }
                },
                "required": ["source", "headers"]
              }
            }
          }
        },
        "netlify": {
          "type": "object",
          "properties": {
            "command": { "type": "string" },
            "publish": { "type": "string" },
            "base": { "type": "string" },
            "environment": {
              "type": "object",
              "patternProperties": {
                ".*": { "type": "string" }
              }
            },
            "redirects": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "from": { "type": "string" },
                  "to": { "type": "string" },
                  "status": { "type": "number" }
                },
                "required": ["from", "to", "status"]
              }
            },
            "headers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "for": { "type": "string" },
                  "values": {
                    "type": "object",
                    "patternProperties": {
                      ".*": { "type": "string" }
                    }
                  }
                },
                "required": ["for", "values"]
              }
            },
            "functions": {
              "type": "object",
              "properties": {
                "directory": { "type": "string" }
              }
            }
          }
        }
      },
      "required": ["vercel", "netlify"]
    },
    "ui": {
      "type": "object",
      "description": "UI configuration",
      "properties": {
        "theme": {
          "type": "object",
          "properties": {
            "default": {
              "type": "string",
              "enum": ["light", "dark", "system"]
            },
            "darkMode": {
              "type": "string",
              "enum": ["class", "media"]
            },
            "colors": {
              "type": "object",
              "properties": {
                "border": { "type": "string" },
                "input": { "type": "string" },
                "ring": { "type": "string" },
                "background": { "type": "string" },
                "foreground": { "type": "string" },
                "primary": {
                  "type": "object",
                  "properties": {
                    "DEFAULT": { "type": "string" },
                    "foreground": { "type": "string" }
                  }
                },
                "secondary": {
                  "type": "object",
                  "properties": {
                    "DEFAULT": { "type": "string" },
                    "foreground": { "type": "string" }
                  }
                },
                "destructive": {
                  "type": "object",
                  "properties": {
                    "DEFAULT": { "type": "string" },
                    "foreground": { "type": "string" }
                  }
                },
                "muted": {
                  "type": "object",
                  "properties": {
                    "DEFAULT": { "type": "string" },
                    "foreground": { "type": "string" }
                  }
                },
                "accent": {
                  "type": "object",
                  "properties": {
                    "DEFAULT": { "type": "string" },
                    "foreground": { "type": "string" }
                  }
                },
                "popover": {
                  "type": "object",
                  "properties": {
                    "DEFAULT": { "type": "string" },
                    "foreground": { "type": "string" }
                  }
                },
                "card": {
                  "type": "object",
                  "properties": {
                    "DEFAULT": { "type": "string" },
                    "foreground": { "type": "string" }
                  }
                }
              }
            },
            "borderRadius": {
              "type": "object",
              "properties": {
                "lg": { "type": "string" },
                "md": { "type": "string" },
                "sm": { "type": "string" }
              }
            },
            "animation": {
              "type": "object",
              "properties": {
                "fadeIn": { "type": "string" },
                "slideUp": { "type": "string" },
                "slideDown": { "type": "string" }
              }
            }
          }
        },
        "content": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["theme", "content"]
    },
    "features": {
      "type": "object",
      "description": "Feature flags and configuration",
      "properties": {
        "blog": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "path": { "type": "string" },
            "postsPerPage": { "type": "number" },
            "enableComments": { "type": "boolean" },
            "enableTags": { "type": "boolean" },
            "enableCategories": { "type": "boolean" }
          }
        },
        "search": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "provider": {
              "type": "string",
              "enum": ["local", "algolia", "elasticsearch"]
            },
            "indexPath": { "type": "string" },
            "enableFilters": { "type": "boolean" }
          }
        },
        "analytics": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "provider": {
              "type": "string",
              "enum": ["google", "plausible", "fathom", "mixpanel"]
            },
            "trackingId": { "type": ["string", "null"] }
          }
        },
        "i18n": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "defaultLocale": { "type": "string" },
            "locales": {
              "type": "array",
              "items": { "type": "string" }
            },
            "pathnames": {
              "type": "object",
              "patternProperties": {
                ".*": { "type": "string" }
              }
            }
          }
        },
        "pwa": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "offlineSupport": { "type": "boolean" },
            "installPrompt": { "type": "boolean" }
          }
        }
      },
      "required": ["blog", "search", "analytics", "i18n", "pwa"]
    },
    "environment": {
      "type": "object",
      "description": "Environment-specific variables",
      "properties": {
        "development": {
          "type": "object",
          "patternProperties": {
            ".*": { "type": "string" }
          }
        },
        "production": {
          "type": "object",
          "patternProperties": {
            ".*": { "type": "string" }
          }
        },
        "staging": {
          "type": "object",
          "patternProperties": {
            ".*": { "type": "string" }
          }
        }
      },
      "required": ["development", "production", "staging"]
    },
    "devAgent": {
      "type": "object",
      "description": "Dev Agent configuration",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "description": { "type": "string" },
        "workflow": {
          "type": "object",
          "properties": {
            "syncInterval": { "type": "number" },
            "autoSync": { "type": "boolean" }
          }
        },
        "branches": {
          "type": "object",
          "properties": {
            "main": { "type": "string" },
            "featurePrefix": { "type": "string" },
            "releasePrefix": { "type": "string" },
            "develop": { "type": "string" }
          }
        },
        "storage": {
          "type": "object",
          "properties": {
            "database": {
              "type": "object",
              "properties": {
                "path": { "type": "string" }
              }
            },
            "config": {
              "type": "object",
              "properties": {
                "path": { "type": "string" }
              }
            },
            "logs": {
              "type": "object",
              "properties": {
                "path": { "type": "string" }
              }
            }
          }
        },
        "github": {
          "type": "object",
          "properties": {
            "repo": { "type": "string" },
            "owner": { "type": "string" }
          }
        },
        "lastUpdated": { "type": "string" },
        "goals": {
          "type": "object",
          "properties": {
            "defaultStatus": { "type": "string" },
            "idPattern": { "type": "string" }
          }
        },
        "validation": {
          "type": "object",
          "properties": {
            "strictLanguage": { "type": "boolean" },
            "autoTranslate": { "type": "boolean" }
          }
        }
      }
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "required": [
    "site",
    "seo",
    "manifest",
    "build",
    "deployment",
    "ui",
    "features",
    "environment",
    "devAgent",
    "lastUpdated"
  ],
  "additionalProperties": false
}
