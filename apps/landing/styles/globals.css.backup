  position: relative;
  z-index: 51;
}

.left-sidebar.mobile-expanded .LanguageSelector [class*="dropdown"],
.left-sidebar.mobile-expanded .LanguageSelector [class*="menu"],
.left-sidebar.mobile-expanded .language-selector-dropdown {
  position: absolute !important;
  top: 100% !important;
  right: 0 !important;
  z-index: 52 !important;
  max-height: 250px !important;
  overflow-y: auto !important;
  margin-top: 8px !important;
}
/* Remove extra spacing on mobile */
@media (max-width: 1024px) {
