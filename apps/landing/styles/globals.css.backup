/* stylelint-disable at-rule-no-unknown */
@tailwind base;
@tailwind components;
@tailwind utilities;
/* stylelint-enable at-rule-no-unknown */

/* Blog styles */
@import './blog.css';

/* Prevent horizontal overflow */
html, body {
  overflow-x: auto; /* FIXED: don't block sticky */
  max-width: 100vw;
}

/* Global sticky rules - must be at the beginning */
header {
  position: sticky !important;
  top: 0 !important;
  z-index: 50 !important;
}

@media (min-width: 1024px) {
  .left-sidebar > div:first-child,
  .right-sidebar > div:first-child {
    position: sticky !important;
    top: 6rem !important;
    z-index: 10 !important;
  }
}

/* Default 3-column layout exactly as in HTML template */
.grid-container {
  display: grid;
  grid-template-columns: 270px 1fr 208px;
  grid-template-areas: "left-sidebar content right-sidebar";
  gap: 0 1.25rem;
  transition: grid-template-columns 0.4s ease-in-out;
}

.left-sidebar {
  grid-area: left-sidebar;
  transition: opacity 0.4s, transform 0.4s;
}

.content {
  grid-area: content;
  margin-left: -20px; /* compensate px-5 left */
  margin-right: -20px; /* compensate px-5 right */
  padding-left: 20px;
  padding-right: 20px;
  transition: margin-left 0.4s ease-in-out;
}

.right-sidebar {
  grid-area: right-sidebar;
  transition: all 0.4s ease-in-out;
}

/* Hidden sidebar: return as in layout */
.grid-container.sidebar-hidden {
  grid-template-columns: 0 1fr 208px;
  gap: 0 0;
}

.grid-container.sidebar-hidden .left-sidebar { 
  opacity: 0;
  transform: translateX(-20px);
  pointer-events: none;
}

.grid-container.sidebar-hidden #show-sidebar-btn { 
  display: inline-block; 
}

.grid-container.sidebar-hidden .content { 
  margin-left: -20px; /* compensate px-5 left */
  margin-right: -20px; /* compensate px-5 right */
  padding-left: 20px;
  padding-right: 20px;
}

/* Content also shouldn't overflow - but without affecting siblings */
.content > * {
  overflow-x: hidden !important;
  min-width: 0 !important;
}

* {
  box-sizing: border-box;
}

/* Ensure all elements don't go beyond viewport */
*,
*::before,
*::after {
  max-width: 100%;
}

/* Sidebar control styles like in template */
#show-sidebar-btn { 
  display: inline-flex; /* Remove !important so React can control visibility */
}



/* Hide scrollbars */
.scrollbar-hide {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.scrollbar-hide::-webkit-scrollbar {
  display: none;
}

/* Prevent overflow in components - NOT on sidebars themselves (breaks sticky) */
.left-sidebar > *, .right-sidebar > * {
  overflow-x: auto; /* FIXED: don't block sticky */
  min-width: 0;
}

/* TOC and sidebar text with truncation */
.left-sidebar a, .right-sidebar a {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
}

/* DON'T add overflow to grid-container - this breaks sticky! */

/* Fix sticky positioning */
.sticky {
  position: sticky !important;
}

/* KEY FIXES for sticky */
/* Remove overflow: hidden from all parent containers */
.min-h-screen, 
.min-h-full,
.h-screen,
.h-full,
html,
body {
  overflow: visible;
  contain: none;
  height: auto;
}

/* Ensure grid-container doesn't block sticky */
.grid-container {
  min-height: 100vh;
  contain: none;
  overflow: visible;
  transform: none;
  filter: none;
}

/* Ensure flex containers don't block sticky */
.flex,
.flex-1,
.flex-col,
.flex-row {
  overflow: visible;
  contain: none;
  transform: none;
  filter: none;
}

/* Remove everything that can block sticky, BUT preserve offcanvas */
*:not(.offcanvas):not(.offcanvas-overlay):not([class*="offcanvas"]) {
  contain: none;
}

/* Exclude only necessary elements from global reset */
*:not(.sticky):not(.offcanvas):not(.offcanvas-overlay):not([class*="offcanvas"]):not([class*="transform"]):not([class*="transition"]):not([class*="bg-primary"]):not([class*="h-full"]):not(.scroll-progress-container):not(.scroll-progress-bar):not([class*="scroll-progress"]) {
  transform: none;
  filter: none;
}

/* Ensure sufficient content height for sticky to work */
.content {
  min-height: auto; /* Natural content height */
}

/* Ensure ScrollProgress Bar works */
[class*="fixed bottom-0 left-0"],
.fixed.bottom-0.left-0.w-full,
.fixed.bottom-0 {
  position: fixed;
  z-index: 60;
  transform: none;
  contain: none;
  filter: none;
}

/* ScrollProgress elements - DON'T block their animations */
.scroll-progress-container,
.scroll-progress-bar,
[class*="scroll-progress"] {
  transform: none;
  contain: none;
  filter: none;
  position: fixed;
  z-index: 60;
}

/* ScrollProgress inner element */
[class*="h-full bg-primary"],
[class*="bg-primary transition-all"],
[style*="width:"] {
  transform: none !important;
  transition: width 0.3s ease-out !important;
  contain: none !important;
  filter: none !important;
}

/* Test element removed - sticky works! */

/* Fix sidebars for sticky */
.left-sidebar, .right-sidebar {
  overflow: visible !important;
  contain: none !important;
  height: auto !important;
  min-height: 100vh !important;
}

/* FORCE elements to be sticky */
.left-sidebar > div, .right-sidebar > div {
  position: sticky !important;
  top: 6rem !important;
  z-index: 10 !important;
}

/* Header forced sticky - MAXIMUM SPECIFICITY */
header {
  position: sticky !important;
  top: 0 !important;
  z-index: 50 !important;
}

/* All possible selectors for header */
.sticky.top-0,
nav.sticky,
header.sticky,
[data-sticky],
.header-sticky {
  position: sticky !important;
  top: 0 !important;
  z-index: 50 !important;
}

/* Specific selectors for sidebars */
.left-sidebar .sticky,
.right-sidebar .sticky,
aside .sticky,
.left-sidebar > .sticky,
.right-sidebar > .sticky {
  position: sticky !important;
  top: 6rem !important;
  z-index: 10 !important;
}

/* Offcanvas animations and styles */
.offcanvas-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  z-index: 1999;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1), visibility 0.4s cubic-bezier(0.4, 0, 0.2, 1), backdrop-filter 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.offcanvas-menu {
  position: fixed;
  top: 0;
  right: 0;
  width: 320px;
  height: 100vh;
  background: hsl(var(--background));
  border-left: 1px solid hsl(var(--border));
  z-index: 2000;
  transform: translateX(100%);
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: -10px 0 25px -5px rgba(0, 0, 0, 0.1), -4px 0 10px -6px rgba(0, 0, 0, 0.1);
}

.offcanvas-header {
  display: flex;
  justify-content: flex-end;
  padding: 1rem;
  border-bottom: 1px solid hsl(var(--border));
}

.offcanvas-content {
  padding: 1.5rem;
  height: calc(100vh - 80px);
  overflow-y: auto;
  overflow-x: visible;
}

/* Fix language selector dropdown in offcanvas */
.offcanvas-content .LanguageSelector {
  position: relative;
  z-index: 2001;
}

.offcanvas-content .LanguageSelector [class*="dropdown"],
.offcanvas-content .LanguageSelector [class*="menu"] {
  position: absolute;
  top: 100%;
  right: 0;
  z-index: 2002;
  max-height: 300px;
  overflow-y: auto;
  margin-top: 8px;
  min-width: 200px;
  width: max-content;
}

/* Ensure other menu items stay visible when language dropdown is open */
.offcanvas-content {
  z-index: 2000 !important;
}

.offcanvas-content > *:not(.LanguageSelector) {
  z-index: 2001 !important;
  position: relative !important;
}

.offcanvas-content .LanguageSelector {
  z-index: 2003 !important;
}

.offcanvas-content .LanguageSelector .language-selector-dropdown {
  z-index: 2004 !important;
}

/* Ensure dropdown is not clipped by offcanvas */
.offcanvas-content .language-selector-dropdown {
  position: absolute !important;
  top: 100% !important;
  right: 0 !important;
  z-index: 2002 !important;
  max-height: 300px !important;
  overflow-y: auto !important;
  margin-top: 8px !important;
  min-width: 200px !important;
  width: max-content !important;
  max-width: calc(100vw - 40px) !important;
}

/* Prevent dropdown from being clipped by offcanvas edges */
.offcanvas-content .LanguageSelector [class*="dropdown"],
.offcanvas-content .LanguageSelector [class*="menu"] {
  max-width: calc(100vw - 40px) !important;
  right: 0 !important;
  transform: translateX(100px) !important;
}

/* Additional fix for language selector positioning in offcanvas */
.offcanvas-content .LanguageSelector {
  position: relative !important;
  z-index: 2001 !important;
  overflow: visible !important;
}

.offcanvas-content .LanguageSelector > div {
  overflow: visible !important;
}

.offcanvas-content .LanguageSelector button {
  overflow: visible !important;
}

/* Fix language selector visibility in offcanvas */
.offcanvas-content .LanguageSelector .language-selector-button {
  background-color: hsl(var(--card)) !important;
  border: 1px solid hsl(var(--border)) !important;
  color: hsl(var(--foreground)) !important;
}

.offcanvas-content .LanguageSelector .language-selector-dropdown {
  background-color: hsl(var(--card)) !important;
  border: 1px solid hsl(var(--border)) !important;
  color: hsl(var(--foreground)) !important;
}

.offcanvas-content .LanguageSelector .language-selector-item {
  background-color: transparent !important;
  color: hsl(var(--foreground)) !important;
}

.offcanvas-content .LanguageSelector .language-selector-item:hover {
  background-color: hsl(var(--accent)) !important;
  color: hsl(var(--accent-foreground)) !important;
}

.offcanvas-content .LanguageSelector .language-selector-item.bg-accent {
  background-color: hsl(var(--accent)) !important;
  color: hsl(var(--accent-foreground)) !important;
}

/* Fix icons in language selector offcanvas */
.offcanvas-content .LanguageSelector svg,
.offcanvas-content .LanguageSelector .language-chevron-icon,
.offcanvas-content .LanguageSelector .language-check-icon {
  color: hsl(var(--foreground)) !important;
  background-color: transparent !important;
}

.offcanvas-content .LanguageSelector .language-selector-item:hover svg,
.offcanvas-content .LanguageSelector .language-selector-item:hover .language-check-icon {
  color: hsl(var(--accent-foreground)) !important;
}

.offcanvas-content .LanguageSelector .language-selector-item.bg-accent svg,
.offcanvas-content .LanguageSelector .language-selector-item.bg-accent .language-check-icon {
  color: hsl(var(--accent-foreground)) !important;
}

/* Fix language selector overlay to not interfere with other menu items */
.offcanvas-content .LanguageSelector [class*="fixed top-16 left-0 right-0 bottom-0"],
.offcanvas-content .LanguageSelector [class*="absolute inset-0"] {
  z-index: 2002 !important;
  pointer-events: none !important;
  position: absolute !important;
  top: 100% !important;
  left: 0 !important;
  right: 0 !important;
  bottom: auto !important;
  height: 100vh !important;
}

.offcanvas-content .LanguageSelector .language-selector-dropdown {
  pointer-events: auto !important;
}

/* Ensure other menu items in offcanvas stay visible */
.offcanvas-content > *:not(.LanguageSelector) {
  z-index: 2001 !important;
  position: relative !important;
  background-color: hsl(var(--background)) !important;
  color: hsl(var(--foreground)) !important;
}

/* Add flex direction to new offcanvas-menu */
.offcanvas-menu {
  display: flex;
  flex-direction: column;
}

/* Active states with improved animations */
.offcanvas-overlay.is-open {
  opacity: 1;
  visibility: visible;
}

.offcanvas-menu.is-open {
  transform: translateX(0);
}

/* Old styles removed - use new ones above */

/* Body scroll lock when offcanvas is open */
body.no-scroll {
  overflow: hidden;
}

/* Scroll lock for modals (without blur) */
body.modal-open {
  overflow: hidden;
  /* Prevent window movement when hiding scrollbar */
  padding-right: var(--scrollbar-width, 0px) !important;
}

/* Prevent cookie banner movement when scrollbar appears */
body.modal-open [data-cookie-banner] {
  padding-right: var(--scrollbar-width, 0px) !important;
}

/* Forced width of search modal window */
.search-modal .max-w-2xl {
  max-width: 42rem !important;
  width: 100% !important;
  min-width: 32rem !important;
}



/* Prevent cookie banner movement when sidebar changes */
[data-cookie-banner] {
  transition: padding-right 0.4s ease-in-out;
}

/* Compensation for cookie banner when sidebar is hidden */
.grid-container.sidebar-hidden ~ [data-cookie-banner],
.grid-container.sidebar-hidden [data-cookie-banner] {
  margin-left: 0;
  margin-right: 0;
  width: 100%;
  left: 0;
  right: 0;
}

/* Cookie banner stabilization - prevent any movement */
[data-cookie-banner] {
  position: fixed !important;
  bottom: 0 !important;
  left: 0 !important;
  right: 0 !important;
  width: 100vw !important;
  max-width: 100vw !important;
  transform: none !important;
  transition: opacity 0.3s ease, padding-right 0.4s ease-in-out !important;
}

/* Search modal window stabilization - prevent movement when sidebar changes */
body.modal-open {
  overflow: hidden;
  /* Prevent window movement when hiding scrollbar */
  padding-right: var(--scrollbar-width, 0px) !important;
}













/* Improve content spacing */
.content-header {
  margin-bottom: 24px;
  align-items: center; /* Center elements vertically */
  display: flex;
  flex-direction: row; /* By default icon on left, breadcrumbs on right */
  padding-top: 38px; /* Lowered 16px down (22px + 16px) */
  gap: 16px; /* Spacing between icon and breadcrumbs */
}

.content-header .breadcrumbs {
  line-height: 16px; /* Matches icon height */
  display: flex;
  align-items: center;
  margin-top: 0; /* Remove margin, use general alignment */
}

.content h1, .content h2 {
  margin-top: 0 !important;
}

.content .prose h1:first-child, 
.content .prose h2:first-child,
.content h1:first-child,
.content h2:first-child {
  margin-top: 0 !important;
}

/* Desktop: hide mobile icons and restore sticky */
@media (min-width: 1024px) {
  .mobile-show {
    display: none !important;
  }
  
  .mobile-hide {
    display: inline-block !important;
  }
  
  /* Force restore sticky on desktop */
  header {
    position: sticky !important;
    top: 0 !important;
    z-index: 50 !important;
  }
  
  .left-sidebar > div,
  .right-sidebar > div,
  .left-sidebar .sticky,
  .right-sidebar .sticky {
    position: sticky !important;
    top: 6rem !important;
    z-index: 10 !important;
  }
}

/* Responsive breakpoints based on site.config.json */
/* tablet: 1280px - hide right sidebar, 2 columns remain */
@media (max-width: 1280px) {
  .grid-container {
    grid-template-columns: 270px 1fr !important;
    grid-template-areas: "left-sidebar content" !important;
    transition: grid-template-columns 0.4s ease-in-out !important;
  }
  
  .grid-container.sidebar-hidden {
    grid-template-columns: 0 1fr !important;
    gap: 0 !important;
  }
  
  .grid-container.sidebar-hidden .left-sidebar {
    opacity: 0 !important;
    transform: translateX(-20px) !important;
    pointer-events: none !important;
  }
  
  .right-sidebar {
    display: none !important;
  }
  
  /* Content takes full available width + padding compensation */
  .content {
    grid-area: content !important;
    margin-left: -20px !important; /* compensate px-5 left */
    margin-right: -20px !important; /* compensate px-5 right */
    padding-left: 20px !important;
    padding-right: 20px !important;
  }
  
  .grid-container.sidebar-hidden .content {
    margin-left: -20px !important; /* compensate px-5 left */
    margin-right: -20px !important; /* compensate px-5 right */
    padding-left: 20px !important;
    padding-right: 20px !important;
  }
}

/* mobile: 1023px - restructure to 1 column, sidebars are moved */
@media (max-width: 1023px) {
  .grid-container {
    grid-template-columns: 1fr !important;
    grid-template-areas: 
      "content" 
      "left-sidebar" 
      "right-sidebar" !important;
    gap: 1rem 0 !important;
  }
  
  .left-sidebar {
    order: 2 !important;
    max-height: 0 !important;
    opacity: 0 !important;
    visibility: hidden !important;
    transition: max-height 0.4s ease-out, opacity 0.4s ease-out, visibility 0.4s ease-out, padding 0.4s ease-out !important;
    overflow: visible !important; /* FIXED: don't block sticky */
    padding-top: 0 !important;
    padding-bottom: 0 !important;
  }
  
  .left-sidebar.mobile-expanded {
    max-height: 400px !important;
    opacity: 1 !important;
    visibility: visible !important;
    padding-top: 1rem !important;
    padding-bottom: 1rem !important;
  }
  
  /* Disable sticky only on mobile - only inside sidebars */
  .left-sidebar > div,
  .right-sidebar > div,
  .left-sidebar .sticky,
  .right-sidebar .sticky {
    position: static !important;
  }
  
  /* BUT header should remain sticky even on mobile */
  header {
    position: sticky !important;
    top: 0 !important;
    z-index: 50 !important;
  }
  

  

  
  .content, .right-sidebar {
    margin-left: -20px !important; /* compensate parent px-5 */
    margin-right: -20px !important; /* compensate parent px-5 */
    padding-left: 20px !important; /* custom padding 20px */
    padding-right: 20px !important; /* custom padding 20px */
  }
  
  .right-sidebar {
    display: block !important;
    grid-area: auto !important;
    order: 3;
  }
  
  /* Move burger icon to right on mobile */
  .content-header {
    flex-direction: row-reverse !important;
  }
  
  .content-header .breadcrumbs {
    text-align: left !important;
  }
  
  /* Hide desktop icons on mobile */
  .mobile-hide {
    display: none !important;
  }
  
  .mobile-show {
    display: inline-block !important;
  }

  .grid-container.sidebar-hidden {
    grid-template-areas: "content" !important;
    grid-template-columns: 1fr !important;
    gap: var(--gap, 20px) !important;
  }
  
  .grid-container.sidebar-hidden .left-sidebar {
    max-height: 0;
    padding-top: 0;
    padding-bottom: 0;
    margin-bottom: 0;
    border: none;
    opacity: 0;
    visibility: hidden;
    display: none;
  }
  
  .grid-container.sidebar-hidden .content {
    margin-left: 0 !important; /* remove negative margins on mobile */
    margin-right: 0 !important;
    padding-left: 20px !important;
    padding-right: 20px !important;
  }
}

/* Additional styles for mobile sidebar */
