  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 400px;
  background: white;
  border: 1px solid #e5e7eb;
  border-radius: 0 0 8px 8px;
  z-index: 50;
  transform: translateY(-100%);
  transition: transform 0.3s ease-in-out;
  padding: 20px;
  box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
  overflow: visible;
}

