@layer components {
  .prose {
    /* Reset default prose styles */
    width: 100% !important;
    max-width: none !important;
    
    h1, h2, h3, h4, h5, h6 {
      @apply font-heading;
    }
    
    /* Headings */
    h1 {
      @apply text-4xl font-bold text-gray-900 dark:text-gray-100 mb-6 mt-8 tracking-tight;
    }
    
    h2 {
      @apply text-3xl font-semibold text-gray-900 dark:text-gray-100 mb-4 mt-8 tracking-tight;
    }
    
    h3 {
      @apply text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-3 mt-6 tracking-tight;
    }
    
    h4 {
      @apply text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2 mt-4 tracking-tight;
    }
    
    h5 {
      @apply text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2 mt-4 tracking-tight;
    }
    
    h6 {
      @apply text-base font-semibold text-gray-900 dark:text-gray-100 mb-2 mt-4 tracking-tight;
    }
    
    /* Next.js style typography - clean and minimal */
    p {
      @apply text-gray-700 dark:text-gray-300 leading-7 mb-4;
    }
    
    /* Links */
    a {
      @apply text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 underline underline-offset-2 transition-colors;
    }
    
    /* Inline code */
    code:not(pre code) {
      @apply bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-gray-100 px-1.5 py-0.5 rounded text-sm font-mono;
    }
    
    /* Code blocks */
    pre {
      @apply bg-gray-100 dark:bg-gray-900 rounded-lg p-4 overflow-x-auto mb-6;
    }
    
    pre code {
      @apply bg-transparent p-0 text-sm font-mono leading-relaxed;
    }
    
    /* Lists */
    ul, ol {
      @apply mb-6 space-y-2 pl-6;
    }
    
    ul {
      @apply list-disc;
    }
    
    ol {
      @apply list-decimal;
    }
    
    li {
      @apply text-gray-700 dark:text-gray-300 leading-7;
    }
    
    /* Nested lists */
    ul ul, ol ol, ul ol, ol ul {
      @apply mt-2 mb-0;
    }
    
    /* Task lists */
    input[type="checkbox"] {
      @apply mr-2 accent-blue-600;
    }
    
    /* Blockquotes */
    blockquote {
      @apply border-l-4 border-blue-500 bg-blue-50 dark:bg-blue-950/20 pl-4 py-2 my-6 rounded-r-lg;
    }
    
    blockquote p {
      @apply mb-0 text-gray-700 dark:text-gray-300;
    }
    
