    table {
      @apply w-full border-collapse border border-gray-200 dark:border-gray-700 mb-6 rounded-lg overflow-hidden;
    }
    
    th, td {
      @apply border border-gray-200 dark:border-gray-700 px-4 py-3 text-left;
    }
    
    th {
      @apply bg-gray-50 dark:bg-gray-800 font-semibold text-gray-900 dark:text-gray-100;
    }
    
    td {
      @apply text-gray-700 dark:text-gray-300;
    }
    
    /* Strong and emphasis */
    strong {
      @apply font-semibold text-gray-900 dark:text-gray-100;
    }
    
    em {
      @apply italic;
    }
    
    /* Strikethrough */
    del {
      @apply line-through text-gray-500 dark:text-gray-400;
    }
    
    /* Highlight */
    mark {
      @apply bg-yellow-200 dark:bg-yellow-800 px-1 rounded;
    }
    
    /* Horizontal rules */
    hr {
      @apply border-0 border-t border-gray-200 dark:border-gray-700 my-8;
    }
    
    /* Images */
    img {
      @apply rounded-lg shadow-sm max-w-full h-auto mb-6;
    }
    
    /* Definition lists */
    dl {
      @apply mb-6;
    }
    
    dt {
      @apply font-semibold text-gray-900 dark:text-gray-100 mb-1;
    }
    
    dd {
      @apply text-gray-700 dark:text-gray-300 ml-4 mb-2;
    }
    
    /* Abbreviations */
    abbr {
      @apply border-b border-dotted border-gray-400 dark:border-gray-500 cursor-help;
    }
    
    /* Footnotes */
    .footnote-ref {
      @apply text-blue-600 dark:text-blue-400 no-underline;
    }
    
    .footnotes {
      @apply border-t border-gray-200 dark:border-gray-700 pt-4 mt-8;
    }
    
    .footnotes ol {
      @apply text-sm;
    }
    
    /* Details/Summary */
    details {
      @apply mb-6 border border-gray-200 dark:border-gray-700 rounded-lg;
    }
    
    summary {
      @apply p-4 cursor-pointer font-medium text-gray-900 dark:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-800;
    }
    
    details[open] summary {
      @apply border-b border-gray-200 dark:border-gray-700;
    }
    
    details > *:not(summary) {
      @apply p-4 pt-0;
    }
    
    /* Callouts with emojis - different colors */
    blockquote:has(strong:first-child) {
      @apply border-l-4 pl-4 py-3 my-6 rounded-r-lg border-blue-500 bg-blue-50 dark:bg-blue-950/20;
    }
    
    /* Specific callout classes for different colors */
    .callout-info {
      @apply border-l-4 pl-4 py-3 my-6 rounded-r-lg border-blue-500 bg-blue-50 dark:bg-blue-950/20;
    }
    
    .callout-warning {
      @apply border-l-4 pl-4 py-3 my-6 rounded-r-lg border-yellow-500 bg-yellow-50 dark:bg-yellow-950/20;
    }
    
    .callout-danger {
      @apply border-l-4 pl-4 py-3 my-6 rounded-r-lg border-red-500 bg-red-50 dark:bg-red-950/20;
    }
    
    .callout-tip {
      @apply border-l-4 pl-4 py-3 my-6 rounded-r-lg border-green-500 bg-green-50 dark:bg-green-950/20;
    }
